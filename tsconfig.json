{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./typings/*.d.ts",
      "node_modules/@types"
    ],
    "allowJs": true,
    "target": "es6",
    "jsx": "react"
  },
  "exclude": [
    "./node_modules/**/*"
  ]
}